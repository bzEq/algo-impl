cc_test(
    name='core_test',
    srcs=[
        'core_test.cc',
        'core.h',
    ],
    copts=[
        '-std=c++20',
        '-O3',
        '-march=native',
        '-Wall',
        '-fno-rtti',
        '-fno-exceptions',
    ],
    linkopts=[
        '-lgtest_main',
        '-lgtest',
        '-pthread',
    ],
)

